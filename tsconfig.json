{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "src/customTypings",
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules/**",
    "test-run-infos-samples/**",
    "test/**"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
